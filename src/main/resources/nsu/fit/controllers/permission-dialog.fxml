<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nsu.fit.controllers.PublicationPermissionDialogController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Категории, которым разрешена выдача издания" textFill="#383838">
      <font>
         <Font name="Hlebozavod Medium" size="22.0" />
      </font></Label>

    <VBox fx:id="checkboxContainer" maxWidth="160.0" minWidth="160.0" prefWidth="160.0" spacing="5" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onSaveClick" style="-fx-background-color: #A29F92;" text="Сохранить" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Hlebozavod Medium" size="15.0" />
            </font>
         <effect>
            <Glow />
         </effect>
        </Button>

        <Button onAction="#onCancelClick" style="-fx-background-color: #A29F92;" text="Отмена" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Hlebozavod Medium" size="15.0" />
            </font>
         <effect>
            <Glow />
         </effect>
        </Button>
    </HBox>
</VBox>
